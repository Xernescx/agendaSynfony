{% extends 'base.html.twig' %}

{% block title %}Contacto
{% endblock %}

{% block contain %}
	<h1 class="d-flex justify-content-center mt-1">Contacto</h1>
	<div class="container">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ contacto.id }}</td>
				</tr>
				<tr>
					<th>Nombre</th>
					<td>{{ contacto.nombre }}</td>
				</tr>
				<tr>
					<th>Apellido</th>
					<td>{{ contacto.apellido }}</td>
				</tr>
				<tr>
					<th>Correo</th>
					<td>{{ contacto.correo }}</td>
				</tr>
				<tr>
					<th>Telefono</th>
					<td>{{ contacto.telefono }}</td>
				</tr>
				<tr>
					<th>Tipo</th>
					<td>{{ contacto.tipo }}</td>
				</tr>
				<tr>
					<th>Notas</th>
					<td>{{ contacto.notas }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex flex-row justify-content-around mb-2">

			<a class="btn btn-info" href="{{ path('contacto_edit', {'id': contacto.id}) }}">editar</a>

			{{ include('contacto/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
